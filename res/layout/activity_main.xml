<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.dz4.ishopping"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dz4.ishop.ui.SplashActivity" >

    <include layout="@layout/topbar" />
    <!-- 指示条 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="horizontal" >

        <View
            android:id="@+id/page1"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#ff8800" />

        <View
            android:id="@+id/page2"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#ff8800" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_zone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="#fafafa"
        android:orientation="horizontal" >

        <com.dz4.ishop.view.BottomTagView
            android:id="@+id/BottomTag_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTagClick"
            android:padding="8dp"
           app:tagcolor="#008800"
            app:tagicon="@drawable/ic_navi_home"
            app:tagsize="10dp"
            app:tagtext="主页" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal" />

        <com.dz4.ishop.view.BottomTagView
            android:id="@+id/BottomTag_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTagClick"
            android:padding="8dp"
            app:tagcolor="#008800"
            app:tagicon="@drawable/ic_navi_chat"
            app:tagsize="10dp"
            app:tagtext="购物车" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal" />

        <com.dz4.ishop.view.BottomTagView
            android:id="@+id/BottomTag_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTagClick"
            android:padding="8dp"
            app:tagcolor="#008800"
            app:tagicon="@drawable/ic_navi_me"
            app:tagsize="10dp"
            app:tagtext="我的" />
    </LinearLayout>

</LinearLayout>