<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/fragment_char_list_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题。。。"
            android:textSize="10pt"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:id="@+id/fragment_char_list_tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2015-11-15 -18:30"
            android:textSize="8pt"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
 

    <ImageView 
        android:id="@+id/fragment_char_list_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/imgv8"/>
  
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/fragment_char_list_tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             
            android:text="内容。。。"
            android:textSize="9pt"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:text="查看全文"
            android:textStyle="italic"
            android:textSize="9pt"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
